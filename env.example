# ==================================
# LearnJoy Environment Configuration
# ==================================
# Copy this file to .env and fill in your values
# cp env.example .env

# ==================================
# Database
# ==================================
DB_PASSWORD=your_secure_password_here

# ==================================
# Cloudflare R2 Storage
# ==================================
# Get these from Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key
R2_BUCKET_NAME=learnjoy-audio
# Optional: Public URL for your R2 bucket (if you enable public access)
R2_PUBLIC_URL=https://pub-xxxxx.r2.dev

# ==================================
# Groq API (LLM for Quiz Generation)
# ==================================
# Get your API key from: https://console.groq.com/keys
# Free tier: 14,400 requests/day
GROQ_API_KEY=gsk_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==================================
# Whisper Configuration
# ==================================
# Model options: tiny, base, small, medium, large
# medium is recommended for Japanese (good balance of speed/accuracy)
WHISPER_MODEL=medium
WHISPER_LANGUAGE=ja

# Dockerfile selection (auto-detected by setup scripts)
# Options: Dockerfile (CPU), Dockerfile.apple-silicon (M1/M2/M3)
WHISPER_DOCKERFILE=Dockerfile

# ==================================
# Application URLs
# ==================================
# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# API URL (used by frontend)
NEXT_PUBLIC_API_URL=http://localhost:3001

# ==================================
# Optional: pgAdmin (Development)
# ==================================
PGADMIN_EMAIL=admin@learnjoy.dev
PGADMIN_PASSWORD=admin

# ==================================
# Backend Configuration
# ==================================
# Server port
PORT=3001

# Upload directory (inside container)
UPLOAD_DIR=/app/uploads

# Base URL for local file serving
BASE_URL=http://localhost:3001

# ==================================
# Whisper Service
# ==================================
WHISPER_SERVICE_URL=http://whisper:5000
